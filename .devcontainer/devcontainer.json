{
    "name": ".NET",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/powershell:1": {
            "version": "latest"
        }
    },
    "workspaceFolder": "/workspaces/nugetizer/docs/scenarios",
    "onCreateCommand": "dotnet tool update -g dotnet-nugetize && sudo dotnet workload restore ./quickstart/packaging-complete/Lib/Quickstart.csproj",
    "postCreateCommand": "pwsh -c 'gci *.*proj -recurse | % { dotnet restore $_ }'",
    "remoteEnv": {
        "PATH": "/home/vscode/.dotnet/tools:/home/codespace/.dotnet/tools:${containerEnv:PATH}"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "explorer.excludeGitIgnore": true,
                "workbench.colorTheme": "GitHub Dark",
                "editor.fontFamily": "CaskaydiaCove Nerd Font Mono,./.vscode/Caskaydia.otf",
                "editor.fontSize": 14,
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "pwsh": {
                        "path": "pwsh",
                        "icon": "terminal-powershell"
                    }
                },
                "terminal.integrated.defaultProfile.linux": "pwsh",
                "terminal.integrated.fontSize": 13,
                "terminal.integrated.fontFamily": "monospace",
                "git.autofetch": true,
                "omnisharp.enableMsBuildLoadProjectsOnDemand": true,
                "omnisharp.enableRoslynAnalyzers": true,
                "omnisharp.enableEditorConfigSupport": true,
                "omnisharp.enableImportCompletion": true
            },
            "extensions": [
                "EditorConfig.EditorConfig",
                "yzhang.markdown-all-in-one",
                "DotJoshJohnson.xml",
                "tintoy.msbuild-project-tools"
            ]
        }
    }
}