{
  "$schema": "http://json.schemastore.org/docfx",
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "exclude": [ "_site/**" ]
      }
    ],    
    "resource": [
      {
        "files": [
          ".nojekyll",
          "logo.svg",
          "favicon.ico",
          "styles/*.css",
          "styles/*.js",
          "img/*.*"
        ]
      },
      {
        "files": [ "**/*.{props,targets}" ],
        "exclude": [ "**/obj/**", "**/bin/**" ],
        "src": "../src",
        "dest": "src"
      }
    ],
    "globalMetadata": {
      "_appTitle": "NuGetizer",
      "_enableSearch": true
    },
    "template": [
      "default",
      "./template"
    ],    
    "dest": "../_site"
  }
}
