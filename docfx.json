{
  "$schema": "http://json.schemastore.org/docfx",
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "exclude": [ "src/**", "_site/**" ]
      }
    ],    
    "resource": [
      {
        "files": [
          "favicon.ico",
          "logo.svg",
          "styles/*.css",
          "styles/*.js",
          "img/**/*.*"
        ]
      },
      {
        "files": [ "**/*.*" ],
        "exclude": [ "**/obj/**", "**/bin/**", "**/*.{md,yml}" ],
        "src": "./docs",
        "dest": "./docs"
      },
      {
        "files": [ ".nojekyll" ],
        "src": "./styles", 
        "dest": "./"
      }
    ],
    "globalMetadata": {
      "_appTitle": "NuGetizer",
      "_enableSearch": true
    },
    "dest": "_site"
  }
}
